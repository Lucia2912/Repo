<div class="banner"> 
<div class="container p-4">
	<div class="row">
		<div class="col-md-5 mx-auto">
			<form action="/proyectos/NuevoProyecto" method="post" id="msform" enctype="multipart/form-data">
				<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="false">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<div class="card text-center">
								<div class="card-header">
									<h3>Grupo de proyecto</h3>
								</div>
								<div class="card-body">
									<table id="myTable" class=" table order-list">
										<thead>
											<tr>
												<td>Nombre de integrante</td>
												<td>Nota de aprobacion</td>
											</tr>
										</thead>
										<tbody>
											<tr>
												<td class="col-sm-4">
													<input type="text" name="name" class="form-control" required/>
												</td>
												<td class="col-sm-4">
													<input type="number" name="nota" class="form-control" required/>
												</td>
												<td class="col-sm-2"><a class="deleteRow"></a></td>
											</tr>
										</tbody>
										<tfoot>
											<tr> 
												<td colspan="5" style="text-align: left;">
													<input type="button" class="btn btn-success btn-block " id="addrow"
														value="Agregar integrante" />
												</td>
											</tr>
											<tr>
											</tr>
										</tfoot>
									</table>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Proyecto</h3>
								</div>
								<div class="card-body">
									<div class="form-group">
										<label>Titulo</label>
										<input type="text" name="titulo" placeholder="Titulo" class="form-control" required>
									</div>
									<div class="form-group">
										<label>Año de realizacion</label>
										<input type="text" id="datepicker" name="anio" placeholder="Año de realizacion"
											class="yearpicker form-control" required>
									</div>
									<div class="form-group">
										<label>Fecha de inicio</label>
										<input type="date" name="inicio" class="form-control" required>
									</div>
									<div class="form-group">
										<label>Fecha de fin</label>
										<input type="date" name="fin" class="form-control" required>
									</div>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="prev">Anterior</button>
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Tutores/Empresa</h3>
								</div>
								<div class="card-body">
									<label>Tutor academico</label>
									<div class="form-group">
										<input type="text" name="tutorA" placeholder="Tutor academico"
											class="form-control" required>
									</div>
									<label>Tutor cliente</label>
									<div class="form-group">
										<input type="text" name="tutorC" placeholder="Tutor cliente"
											class="form-control" required>
									</div>
									<label>Empresa/organizacion/institucion</label>
									<div class="form-group">
										<input type="text" name="empr" placeholder="Empresa/organizacion/institucion"
											class="form-control" required>
									</div>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="prev">Anterior</button>
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Tribunal</h3>
								</div>
								<div class="card-body">
									<table id="myTable2" class=" table order-list2">
										<thead>
											<tr>
												<td>Nombre completo</td>
												<td>Cargo</td>
												<td>Empresa</td>
											</tr>
										</thead>
										<tbody>
											<tr>
												<td class="col-sm-4">
													<input type="text" name="nombreC" class="form-control" required/>
												</td>
												<td class="col-sm-4">
													<input type="text" name="cargo" class="form-control" required/>
												</td>
												<td class="col-sm-4">
													<input type="text" name="emprTut" class="form-control" required/>
												</td>
												<td class="col-sm-2"><a class="deleteRow"></a></td>
											</tr>
										</tbody>
										<tfoot>
											<tr>
												<td colspan="5" style="text-align: left;">
													<input type="button" class="btn btn-success btn-block "
														id="addTutor" value="Agregar integrante" />
												</td>
											</tr>
											<tr>
											</tr>
										</tfoot>
									</table>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="prev">Anterior</button>
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Resumen</h3>
								</div>
								<div class="card-body">
									<div class="form-group">
										<label>Resumen</label>
										<textarea name="resumen" cols="40" rows="5" class="form-control" placeholder="Escriba el resumen del proyecto aqui"></textarea>
									</div>
									<div class="form-group">
										<label>Subir resumen pdf</label>
										<input type="file" name="resumenpdf" class="filestyle"
											data-buttonText="Seleccione un archivo">
									</div>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="prev">Anterior</button>
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Material</h3>
								</div>
								<div class="card-body">
									<div class="form-group">
										<label>Banner</label>
										<div class="col-sm-7 imgUp mx-auto">
											<div class="imagePreview"></div>
											<label class="btn btn-primary">Elegir imagen<input type="file" name="banner"
													class="uploadFile img" value="Upload Photo"
													style="width: 0px;height: 0px;overflow: hidden;"></label>
										</div>
									</div>
									<div class="form-group">
										<label>Presentacion</label>
										<input type="file" class="filestyle" name="present"
											data-buttonText="Seleccione un archivo">
										<label>Link de la presentacion</label>
										<input type="url" name="linkPres" placeholder="Url de presentacion"
											class="form-control">
									</div>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="prev">Anterior</button>
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Material</h3>
								</div>
								<div class="card-body">
									<div class="form-group">
										<label>Investigacion</label>
										<input type="file" class="filestyle" name="invest"
											data-buttonText="Seleccione un archivo" multiple>
									</div>
									<div class="form-group">
										<label>Documentacion</label>
										<input type="file" class="filestyle" name="documents"
											data-buttonText="Seleccione un archivo" multiple>
									</div>
									<div class="form-group">
										<label>Codigo</label>
										<input type="file" class="filestyle" name="codigo"
											data-buttonText="Seleccione un archivo" multiple>
									</div>
									<div class="form-group">
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="prev">Anterior</button>
										<button class="btn btn-success" href="#carouselExampleControls" role="button"
											data-slide="next">Siguiente</button>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="card text-center">
								<div class="card-header">
									<h3>Galeria de imagenes</h3>
								</div>
								<div class="card-body">
									<div class="form-group">
										<a href="javascript:void(0)" onclick="$('#pro-image').click()"><i
												class="fa fa-plus"></i>Elegir imagenes</a>
										<input type="file" id="pro-image" name="pro-image" style="display: none;"
											class="form-control" multiple>
									</div>
									<div class="form-group">
										<div class="preview-images-zone">

										</div>
									</div>
									<label>Video de presentacion</label>
									<div class="form-group">
										<input type="file" class="filestyle" name="videoPres" id="videoPres"
											data-buttonText="Seleccione un archivo" multiple><br>
									</div>
			</form>
			<form method="post" enctype="multipart/form-data">
				<label>Videos</label>
				<div class="form-group">
					<input type="file" class="filestyle" name="file1" id="file1" onchange="uploadFile()"
						data-buttonText="Seleccione un archivo" multiple><br>
					<progress id="progressBar" value="0" max="100" style="width:300px;"></progress>
					<h3 id="status"></h3>
					<p id="loaded_n_total"></p>
				</div>
			</form>
			<div class="form-group">
				<button class="btn btn-success" href="#carouselExampleControls" role="button"
					data-slide="prev">Anterior</button>
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-block">
					Agregar proyecto
				</button>
			</div>
		</div>
	</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>

