<div class="container p-9">
    <div class="row">
        <div class="col-md-9 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Proyecto</h3>
                </div>
                <div class="card-body">
                    <span>Titulo: {{proyecto.titulo}}</span>
                    <br>
                    <span>AÃ±o de realizacion: {{proyecto.anioRealizacion}}</span>
                    <br>
                    <span>Inicio: {{#dateFormat proyecto.FechaInicio }} {{/dateFormat}}</span>
                    <br>
                    <span>Fin: {{#dateFormat proyecto.FechaFin }} {{/dateFormat}}</span>
                    <br>
                    {{#if proyecto.resumen}}
                    Resumen: {{proyecto.resumen}}
                    {{/if}}
                    <br>
                    {{#if proyecto.link}}
                    Presentacion: <a href="{{proyecto.link}}">Click para ver la presentacion</a>
                    {{/if}}
                    <br>
                    <span>Tutor academico: {{proyecto.TutorAcademico}}</span>
                    <br>
                    <span>Tutor cliente: {{proyecto.TutorCliente}}</span>
                    <br>
                    <span>Empresa: {{proyecto.Empresa}}</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-9">
    <div class="row">
        <div class="col-md-9 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Grupo de proyecto</h3>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Nombre completo</th>
                                <th scope="col">Nota de aprobacion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each grupo}}
                            <tr>
                                <td>{{ 	NombreCompleto }}</td>
                                <td>{{ Nota }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-9">
