					<input type="text" name="asunto" placeholder="Asunto" required="">
					<textarea name="texto" placeholder="Escriba su sugerencia" required=""></textarea>
					<input type="submit" value="Enviar">
				</form>
			</div>
		</div>
	</div>
    </div>
