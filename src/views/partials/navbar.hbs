              <li class="nav-item"><a href="/logout" class="nav-link">Cerrar sesion</a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
      <div class="cd-main-header">
        <ul class="cd-header-buttons">
          <li><a class="cd-search-trigger" href="#cd-search"> <span></span></a>
          </li>
        </ul>
      </div>
      <div id="cd-search" class="cd-search">
        <form action="/buscador" method="post">
          <input name="filtro" type="search" placeholder="Presione enter luego de ingresar su busqueda...">
        </form>
      </div>
    </div>
  </div>
</div>
