                                <td><a href="/proyectos/eliminar/{{../id}}" class="btn btn-danger"><i
                                            class="fas fa-times"></i></a></td>
                                {{/ifEquals}}
                                {{#ifEquals ../user.Rol "Administrador"}}
                                <td><a href="/proyectos/detalle/{{../id}}" class="btn btn-info"><i
                                            class="far fa-eye"></i></a></td>
                                <td><a href="/proyectos/editar/{{../id}}" class="btn btn-warning"><i
                                            class="far fa-edit"></i></a></td>
                                <td><a href="/proyectos/eliminar/{{../id}}" class="btn btn-danger"><i
                                            class="fas fa-times"></i></a></td>
                                {{/ifEquals}}
                                {{else}}
                                <td><a href="/proyectos/detalles/{{../id}}" class="btn btn-info"><i
                                            class="far fa-eye"></i></a></td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                        {{else}}
                        <tbody>
                            <h3>No se han encontrado resultados</h3>
                        </tbody>
                        {{/if}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>